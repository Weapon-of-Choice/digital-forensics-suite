# Forensics Platform - Main Environment Configuration
# Copy this to .env and modify as needed

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_DB=forensics
POSTGRES_USER=forensics
POSTGRES_PASSWORD=change_me
DATABASE_URL=postgresql://forensics:change_me@db:5432/forensics

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# KEYCLOAK
# =============================================================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=change_me
KEYCLOAK_DB=keycloak
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=change_me
KEYCLOAK_URL=http://keycloak:8080/auth
KEYCLOAK_REALM=forensics
KEYCLOAK_CLIENT_ID=forensics-api

# =============================================================================
# OSM
# =============================================================================
OSM_DB=osm
OSM_DB_USER=osm
OSM_DB_PASSWORD=change_me

# =============================================================================
# SERVICES
# =============================================================================
FACE_SERVICE_URL=http://face-service:5000
HASH_SERVICE_URL=http://hash-service:5000
VSM_SERVICE_URL=http://vsm-service:5000
AI_CATEGORIZER_URL=http://ai-categorizer:5000
GEOCODER_URL=http://geocoder:5000
NOMINATIM_URL=https://nominatim.openstreetmap.org

# =============================================================================
# STORAGE
# =============================================================================
UPLOAD_DIR=/app/uploads
MINIO_ROOT_USER=forensics
MINIO_ROOT_PASSWORD=change_me
MINIO_ACCESS_KEY=forensics
MINIO_SECRET_KEY=change_me
MINIO_BUCKET=media

# =============================================================================
# FRONTEND
# =============================================================================
VITE_API_URL=/api
VITE_KEYCLOAK_URL=/auth
VITE_KEYCLOAK_REALM=forensics
VITE_KEYCLOAK_CLIENT_ID=forensics-ui
VITE_OSM_URL=/osm
